{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Monxit",
  "scopeName": "source.monxit",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.monxit",
          "match": "\\b(Say|Add|Set|If|Then|While|Repeat)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.monxit",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.monxit",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.monxit",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    }
  }
}
